#! /bin/sh
#
# Test for Japanese encoding
#
LOG=`pwd`/test-log
echo '  *** starting ' $0 >>$LOG
TARGET=$srcdir/data/ja-spec
IDX=ja-idx1

EXEC=no
case $LANG in 
	ja*)
		EXEC=yes
		;;
esac
if [ $EXEC = 'no' ]
then
	echo "Skipping because of LANG($LANG) does not begin with ja: $0" >> $LOG
	exit 77
fi

if test ! -d $IDX; then
    mkdir $IDX
else
    rm -f $IDX/NMZ.*
fi

../scripts/mknmz -O $IDX $TARGET >> $LOG
exit $?
