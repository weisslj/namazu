# output NMZ.result
sub write_result_file () {
    my $file = $conf::File{'RESULTFILE'};

    if (-e $file) {
	return;
    } 

    $file =~ m!.*/(.*)$!;
    my $fname = $1;
    my $template = "";
    my $buf = "";

    my $templatedir2 = cwd() . "/../filter";  # relative path from cwd
    if ( -e "$templatedir2/$fname") {
	
	$template = "$templatedir2/$fname";
    } else {
	$template = "$TEMPLATEDIR/$fname";
    }
    if (-e $template) {
	$buf = readfile($template);
    } else {
	return;
    }

    # the file must be saved in ISO-2022-JP encoding.
    my $fh_file;
    if ($conf::LANGUAGE eq "ja" && !$conf::USE_NKF_MODULE) {
	$fh_file = efopen("|$conf::NKF -j >$file");
    } else {
	$fh_file = efopen(">$file");
    }

    $buf = NKF::nkf("-j", $buf) if $conf::USE_NKF_MODULE;
    print $fh_file $buf;
}

# write NMZ.body and etc.
sub write_message ($$) {
    my ($full_path_name, $msg) = @_;

    if (! -e $full_path_name) {
	my ($template, $fname);
	
	$full_path_name =~ m!.*/(.*)$!;
	$fname = $1;
	my $templatedir2 = cwd() . "/../filter";  # relative path from cwd
	if ( -e "$templatedir2/$fname") {
	    $template = "$templatedir2/$fname";
	} else {
	    $template = "$LIBDIR/$fname";
	}
	if (-e $template) {
	    my $buf = readfile($template);
	    my $fh_output;
	    if ($conf::LANGUAGE eq "ja" && !$conf::USE_NKF_MODULE) {
		$fh_output = efopen("|$conf::NKF -j >$full_path_name");
	    } else {
		$fh_output = efopen(">$full_path_name");
	    }
	    $buf =~ s/"/\\"/g;
	    $buf =~ s/\@/\\@/g;
	    $buf = eval("\"$buf\"");  # eval to interpolate variables in $buf
	    $buf = NKF::nkf("-j", $buf) if $conf::USE_NKF_MODULE;

	    print $fh_output $buf;
	}
    }
}


