sub get_number_from_file ($) {
    my ($file) = @_;

    return 0 unless -f $file;

    my $fh = efopen($file);
    my $number = "";
    $number = <$fh>;
    chomp $number;
    $number =~ s/,//g;

    if ($number eq "") {
	return 0;
    } else {
	return $number;
    }
}

