package compress;
use strict;
require 'util.pl';

my $TMPFILE = tmpnam('NMZ.compr');

sub mediatype() {
    return ('application/x-compress');
}

sub status() {
    my $zcatpath = checkcmd('zcat');
    return 'no' unless (defined $zcatpath);
    return 'yes';
}

sub recursive() {
    return 1;
}

sub filter ($$$$$$) {
    my ($orig_cfile, $cont, $weighted_str, $headings, $fields, $size)
      = @_;

    my $zcatpath = checkcmd('zcat');

    print "Proccessing compress file ... (use '$zcatpath')\n"
      if ($conf::VerboseOpt);

    my $fh = efopen("|$zcatpath > $TMPFILE");
    print $fh $$cont;
    undef $fh;
    $fh = efopen("$TMPFILE");
    $$cont = readfile($fh);
    undef $fh;
    unlink($TMPFILE);

    $$size = length($$cont);
}

1;
