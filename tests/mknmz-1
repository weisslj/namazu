#! /bin/sh
#
# Test for simple indexing.
#
# select-data returns data/en or data/ja depending on environment.
LOG=`pwd`/test-log
TARGET=`$srcdir/select-data`
echo '  *** starting ' $0 >>$LOG

if test ! -d idx1; then
    mkdir idx1
else
    rm -f idx1/NMZ.*
fi

# Simple indexing.
../scripts/mknmz  -O idx1 $TARGET >> $LOG
exit $?
