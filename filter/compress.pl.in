package compress;
use strict;
require 'util.pl';

my $TMPFILE = 'NMZ.ctmp';

sub filter ($$$$$$) {
    my ($orig_cfile, $title, $cont, $weighted_str, $headings, $fields, $size)
      = @_;

    print "Proccessing compress file ... (use '@OPT_HELPER_ZCAT@')\n"
      if ($conf::VerboseOpt);

    my $fh = util::fopen_or_die("|@OPT_HELPER_ZCAT@ > $TMPFILE");
    print $fh $$cont;
    undef $fh;
    $fh = util::fopen_or_die("$TMPFILE");
    $$cont = util::readfile($fh);
    undef $fh;
    unlink($TMPFILE);

    $$size = length($$cont);
}

1;
