#! /bin/sh
#
# Test for phrase search to used builtin wakati index.
#
LOG=`pwd`/test-log
echo '  *** starting ' $0 >>$LOG

EXEC=no

lc_all=$LC_ALL
lc_ctype=$LC_CTYPE
lang=$LANG

for ctype in "$lc_all" "$lc_ctype" "$lang"; do
    if test -n "$ctype" -a "$ctype" = "C"; then
        ctype="en"
        break
    fi
    cand=`echo "$ctype" | LC_ALL="C" perl -nle 'print $1 if /^(..)/'`
    if test -n "$cand"; then
        ctype=$cand
        break
    fi
done

case $ctype in 
        ja*)
                EXEC=yes
                ;;
esac
if [ $EXEC = 'no' ]
then
        echo "Skipping because of LANG does not begin with ja: $0" >> $LOG
        exit 77
fi

# Check Jaapanese disassembled words searching.
cd ../src
hitnum=`./namazu -c 'ËÌÎ¦ÀèÃ¼²Ê³Øµ»½ÑÂç³Ø±¡Âç³Ø' ../tests/ja-idx5`
test "$hitnum" != 1 && exit 1  # error if not matched

hitnum=`./namazu -c 'ËÌÎ¦' ../tests/ja-idx5`
test "$hitnum" != 1 && exit 1  # error if not matched

hitnum=`./namazu -c 'Âç³Ø±¡' ../tests/ja-idx5`
test "$hitnum" != 1 && exit 1  # error if not matched

# Check Jaapanese phrease searching.
./namazu '{Âç³Ø±¡ Âç³Ø}' ../tests/ja-idx5 | egrep ':: [1-9]' >/dev/null
test $? -ne 0 && exit 1
./namazu '{Âç³Ø±¡ Âç³Ø}' ../tests/ja-idx5 | egrep ':: 0' >/dev/null
test $? -ne 0 || exit 1

./namazu '{²Ê³Ø µ»½Ñ}' ../tests/ja-idx5 | egrep ':: [1-9]' >/dev/null
test $? -ne 0 && exit 1
./namazu '{²Ê³Ø µ»½Ñ}' ../tests/ja-idx5 | egrep ':: 0' >/dev/null
test $? -ne 0 || exit 1

exit 0
